{
  "name": "autotester",
  "version": "0.1.0",
  "description": "Chrome extension allowing to write and run automation tests right in browser",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/autotester.git"
  },
  "scripts": {
    "__DEVELOPMENT__": "==========================================================",
    "dev": "npm run clean && run-p watch:** gen-build-info",
    "__TESTING__": "==============================================================",
    "test": "npm run test:l",
    "test:l": "run-p crx-dev crx-dev-selftest && node ./test/run local",
    "test:b": "run-p crx-dev crx-dev-selftest && source .env && node ./test/run browserstack",
    "test:s": "run-p crx-dev crx-dev-selftest && source .env && node ./test/run sauce",
    "test:y": "run-p crx-dev crx-dev-selftest && source .env && node ./test/run yandex",
    "__BUILD__": "================================================================",
    "build": "run-s unpacked zip crx --outdir=dist/unpacked",
    "build-with-examples": "run-s unpacked zip --outdir=dist/unpacked --copytest=examples --outzip=../autotester-with-examples.zip",
    "__PUBLISH__": "==============================================================",
    "build-for-npm": "npm run unpacked && cpx -v package.json $npm_config_outdir/../",
    "publish-to-npm": "npm run build-for-npm --outdir=dist/npm-publish/extension && npm publish dist/npm-publish",
    "__HELPERS__": "==============================================================",
    "clean": "rimraf $npm_config_outdir",
    "clean-dist": "rimraf dist",
    "code": "run-s check-deps madge no-only-in-test",
    "madge": "madge --format=cjs --circular src",
    "check-deps": "check-dependencies",
    "no-only-in-test": "if [ \"$(git diff --cached -- 'test/**/*.js'| grep '\\+' | grep '\\.only')\" != \"\" ]; then exit 1; fi",
    "webpack": "webpack --config ./builder/webpack.config.js",
    "copy:manifest": "cpx -v src/manifest.json $npm_config_outdir/",
    "copy:ui": "cpx -v 'src/ui/ui.{html,css}' $npm_config_outdir/core/ui/",
    "copy:mocha": "cpx -v 'node_modules/mocha/mocha.js' $npm_config_outdir/core/background/",
    "copy:unpacked-selftest": "node builder/cpx-unpacked-selftest.js copy",
    "copy-selftest": "cpx -v 'test/specs/**' $npm_config_outdir/tests/",
    "copy-examples": "cpx -v 'examples/**' $npm_config_outdir/tests/",
    "watch:webpack": "npm run webpack -- --watch",
    "watch:manifest": "npm run copy:manifest -- -w",
    "watch:selftest": "npm run copy-selftest -- -w",
    "watch:ui": "npm run copy:ui -- -w",
    "watch:mocha": "npm run copy:mocha -- -w",
    "watch:unpacked-selftest": "node builder/cpx-unpacked-selftest.js watch",
    "copy": "run-p copy:** && npm run copy-test",
    "copy-test": "if [[ -n $npm_config_copytest ]]; then npm run copy-$npm_config_copytest; fi",
    "fileserver": "node ./node_modules/selenium-webdriver/lib/test/fileserver.js",
    "unpacked": "run-s clean webpack copy gen-build-info",
    "gen-build-info": "node builder/gen-build-info",
    "zip": "pushd $npm_config_outdir && rimraf $npm_config_outzip && zip -rT $npm_config_outzip . && popd",
    "crx": "crx pack $npm_config_outdir -o $npm_config_outcrx -p $npm_config_crxkey",
    "crx-dev": "npm run crx --outcrx=dist/autotester-dev.crx --crxkey=keys/autotester.pem",
    "crx-dev-selftest": "crx pack dist/unpacked-dev-selftest -o dist/autotester-dev-selftest.crx -p keys/autotester-selftest.pem"
  },
  "dependencies": {},
  "devDependencies": {
    "archiver": "^1.1.0",
    "assert": "^1.4.1",
    "check-dependencies": "^1.0.1",
    "chnl": "^0.1.14",
    "chromedriver": "^2.23.1",
    "cpx": "^1.3.2",
    "crx": "^3.0.3",
    "css-loader": "^0.24.0",
    "es6-promisify-all": "^0.1.0",
    "escape-string-regexp": "^1.0.5",
    "eslint": "^3.4.0",
    "eslint-plugin-mocha": "^4.5.1",
    "exports-loader": "^0.6.3",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "ghooks": "^1.3.2",
    "got": "^6.3.0",
    "html-to-text": "^2.1.3",
    "html5-fs": "^0.1.0",
    "json-stringify-safe": "^5.0.1",
    "keymirror": "^0.1.1",
    "madge": "^1.1.0",
    "marked": "^0.3.6",
    "mocha": "^3.0.2",
    "multer": "^1.1.0",
    "npm-run-all": "^3.1.0",
    "promises-aplus-tests": "^2.1.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "selenium-webdriver": "^3.0.0-beta-2",
    "serve-index": "^1.8.0",
    "style-loader": "^0.13.1",
    "then-chrome": "^1.0.5",
    "webpack": "^1.13.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run code",
      "pre-push": "npm test"
    }
  },
  "keywords": [
    "selenium",
    "webdriver",
    "webdriverjs",
    "automation",
    "testing",
    "test",
    "chormedriver",
    "chrome"
  ],
  "license": "MIT"
}
